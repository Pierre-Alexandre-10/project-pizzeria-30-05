{% extends 'base.html.twig' %}

{% block body %}


    <div class="hero-unit">
        <div class="hero-bg-image">
            <img src="images/banner.jpg">
            <div class="hero-bg-image-frame"></div>
        </div>
    <h1>Pizza shop</h1>
    <p class="hero-subtitle">Vos meilleurs pizzas à portée de click</p>
    </div>


    <div class="container">
        <h1>Nos pizzas</h1>
        {% for pizzas in pizza %}
        <div class="pizza-card">
            <div class="pizza-card-bg-image">
            {% if pizzas.imageUrl %}
                    <img src="{{ pizzas.imageUrl }}" alt="{{ pizzas.name }}">
                    <div class="pizza-card-bg-image-frame"></div>
            {% endif %}
            </div>
            <h3>{{ pizzas.name }}</h3>
            <p class="description"> <i>{{ pizzas.description }}</i> </p>

            <div class="pizza-card-footer">
                <div class="price">
                    <p>Prix: {{pizzas.price}}</p>
                </div>
                <a class="btn" href="">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span>Ajouter au panier</span>
                </a>
            </div>
        </div>
    </div>
    {% endfor %}

{% endblock %}